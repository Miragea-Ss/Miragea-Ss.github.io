---
// src/components/InfiniteGallery.astro
import defaultWorks from '../data/works.json';

const { 
  lang = 'en', 
  works = defaultWorks 
} = Astro.props;

const uiText = {
  en: { empty: "Void..." },
  ja: { empty: "虚空..." },
  zh: { empty: "虚空..." }
};
const t = uiText[lang] || uiText.en;
---

{works.length > 0 ? (
  <div id="gallery-container" class="masonry-wrapper">
    {works.map((work) => (
      <div class="work-item">
        <a href={`/${lang}/works/${work.id}`} class="work-link group">
          <div class="image-container">
            <img 
              src={work.file} 
              alt={work.title} 
              loading="lazy"
              decoding="async"
            />
            
            <!-- オーバーレイ：全体を優しく包むグラデーション -->
            <div class="overlay">
              <span class="view-text">View Memory</span>
            </div>
          </div>
          
          <!-- タイトルは画像の外に出して、余白を作る -->
          <div class="meta-info">
            <h3 class="work-title">{work.title}</h3>
            <div class="work-tags">
              {work.tags.slice(0, 3).map(tag => <span>#{tag}</span>)}
            </div>
          </div>
        </a>
      </div>
    ))}
  </div>
) : (
  <div class="empty-state">{t.empty}</div>
)}

<style>
  /* Masonry全体 */
  .masonry-wrapper {
    column-count: 1;
    column-gap: 2rem; /* 隙間を広げてゆったりさせる */
    padding: 2rem;
    max-width: 1800px;
    margin: 0 auto;
  }

  @media (min-width: 768px) { .masonry-wrapper { column-count: 2; } }
  @media (min-width: 1200px) { .masonry-wrapper { column-count: 3; } }

  /* 個々のアイテム */
  .work-item {
    break-inside: avoid;
    margin-bottom: 3rem; /* 縦の余白もたっぷりとる */
  }

  .image-container {
    position: relative;
    border-radius: 1.5rem; /* 画像の角を丸くする（脱・四角形） */
    overflow: hidden;
    background: #111;
    transition: transform 1s cubic-bezier(0.19, 1, 0.22, 1);
    box-shadow: 0 10px 40px -10px rgba(0,0,0,0.5);
  }

  /* ホバー時に浮遊感を出す */
  .work-link:hover .image-container {
    transform: translateY(-5px) scale(1.01);
    box-shadow: 0 20px 50px -10px rgba(255,255,255,0.05); /* ほのかな白い光 */
  }

  img {
    width: 100%;
    height: auto;
    display: block;
    opacity: 0.8;
    transition: opacity 1s ease;
  }

  .work-link:hover img {
    opacity: 1;
  }

  /* メタ情報（タイトルのスタイル） */
  .meta-info {
    padding: 1rem 0.5rem;
    opacity: 0.6;
    transition: opacity 0.5s;
  }
  .work-link:hover .meta-info {
    opacity: 1;
  }

  .work-title {
    font-size: 0.95rem;
    font-weight: 300;
    color: #eee;
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.05em;
  }

  .work-tags span {
    font-size: 0.75rem;
    color: #666;
    margin-right: 0.5rem;
  }

  /* オーバーレイ */
  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(255,255,255,0.05);
    opacity: 0;
    transition: opacity 0.5s;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .work-link:hover .overlay {
    opacity: 1;
  }
  .view-text {
    color: #fff;
    font-weight: 100;
    letter-spacing: 0.2em;
    font-size: 0.8rem;
    text-transform: uppercase;
  }

  .empty-state {
    text-align: center;
    padding: 5rem;
    color: #333;
    font-family: serif;
    font-style: italic;
  }
</style>